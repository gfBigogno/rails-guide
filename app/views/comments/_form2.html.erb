<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <div class="row ">
    <%= f.label :commenter, class: "form-label" %>
    <%= f.text_field :commenter, class: "form-control" %>
  </div>

  <div class="row mt-3">
    <%= f.label :body, class: "form-label" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="row mt-3">
    <div class="col-4">
     <%= f.label :status, class: "form-label" %>
     <%= f.select :status, ['public', 'private', 'archived'], selected: 'public', class: "form-select" %>
      <button type="button" class="ml-3 btn btn-secondary btn-sm" data-action="nested-form#remove">Remove comment</button>
      <%= f.hidden_field :_destroy %>
    </div>
  </div>
</div>
